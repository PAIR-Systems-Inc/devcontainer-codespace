{
  "name": "GoodMem Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // This command now runs all steps in order
  "postCreateCommand": "npm install && if [ ! -f .env ]; then cp .env.example .env; fi",
  "postAttachCommand": "curl -s https://get.goodmem.ai | bash -s -- --prod-install --no-openai-embedder-registration",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-docker",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
